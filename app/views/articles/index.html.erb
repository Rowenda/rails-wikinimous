<div class="container">
<% @articles.each do |article| %>
  <article>
  <h2><%= link_to article.title, article_path(article) %></h2>
  <p><%= article.content %></p>
  <%= link_to article_path(article), data: {turbo_method: :delete, turbo_confirm: "Are you sure?"} do %>
    <i class="fas fa-trash-alt"></i>
  <% end %>
  </article>
<% end %>
</div>
